{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Foompany.Services.HelloWorld",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "Phoesion.Glow.Reactor.Debugger.exe",
            "args": [ 
                "-QuantumSpace:Default",
                "${workspaceFolder}/bin/Debug/net8.0/win-x64/Foompany.Services.HelloWorld.dll" 
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Foompany.Services.HelloWorld (Remote Debugger)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "Phoesion.Glow.Debugger.FireflySrv.exe",
            "args": [
                "${workspaceFolder}/bin/Debug/net8.0/win-x64/Foompany.Services.HelloWorld.dll" 
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}