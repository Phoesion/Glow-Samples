<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
        <UseBlazorWebAssembly>true</UseBlazorWebAssembly>
        <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
    </PropertyGroup>

    <!-- Other packages -->
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.10" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.10" PrivateAssets="all" />
    </ItemGroup>

    <!-- Glow packages -->
    

    
    <ItemGroup>
        <PackageReference Include="Phoesion.Glow.SDK.Blazor.WebAssembly" Version="0.0.303" />
        <PackageReference Include="Phoesion.Glow.SDK.Client.REST" Version="0.0.303" />
    </ItemGroup>
    

    <!-- Project references -->
    <ItemGroup>
        <ProjectReference Include="..\..\API\Foompany.Services.Backend.API\Foompany.Services.Backend.API.csproj" />
    </ItemGroup>

    <!-- ServiceWorker -->
    <ItemGroup>
        <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
    </ItemGroup>

</Project>
