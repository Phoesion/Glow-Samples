<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
        <UseBlazorWebAssembly>true</UseBlazorWebAssembly>
    </PropertyGroup>

    <!-- Other packages -->
    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="7.0.5" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="7.0.5" PrivateAssets="all" />
    </ItemGroup>

    <!-- Glow packages -->
    

    
    <ItemGroup>
        <PackageReference Include="Phoesion.Glow.SDK.Blazor.WebAssembly" Version="1.1.0" />
        <PackageReference Include="Phoesion.Glow.SDK.Client.REST" Version="1.1.0" />
    </ItemGroup>
    

    <!-- Project references -->
    <ItemGroup>
        <ProjectReference Include="..\..\API\Foompany.Services.Backend.API\Foompany.Services.Backend.API.csproj" />
    </ItemGroup>

    <!-- ServiceWorker -->
    <ItemGroup>
        <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
    </ItemGroup>

</Project>
